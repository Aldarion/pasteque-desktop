<!--
Some settings for the shortcut panel
-->
<shortcuts>
    <skipIfNotSupported/>
    <defaultCurrentUser/>
    <programGroup defaultName="Scil\Pasteque" location="applications"/>
    <!--
    Shortcut of the application
    -->
    <shortcut
        name="Pasteque"
        target="$INSTALL_PATH\bin\start.bat"
        description="Launch Pasteque"
        iconFile="$INSTALL_PATH\pasteque_launcher.ico"
        iconIndex="0"
        initialState="noShow"
        programGroup="yes"
        desktop="yes"
        applications="no"
        startMenu="yes"
        startup="no">
    <createForPack name="Core"/>
    </shortcut>
    <!--
    Shortcut of the application uninstaller
    -->
    <shortcut
        name="Pasteque-Uninstaller"
        target="$INSTALL_PATH\bin\Pasteque-uninstaller.jar"
        description="Uninstall Pasteque"
        iconFile="$INSTALL_PATH\pasteque_launcher.ico"
        iconIndex="0"
        initialState="noShow"
        programGroup="yes"
        desktop="no"
        applications="no"
        startMenu="no"
        startup="no">
    <createForPack name="Core"/>
    </shortcut>

</shortcuts>
