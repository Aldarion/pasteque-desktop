sur ce site.
http://izpack.org/documentation/desktop-shortcuts.html
-->

<!--
Quelques paramètres pour les raccourcis
-->
<shortcuts>
    <skipIfNotSupported/>
    <defaultCurrentUser/>
    <programGroup defaultName="Scil\Pastèque" location="applications"/>
    <!--
    Raccourci de l'application
    -->
    <shortcut
        name="Pastèque"
        target="$INSTALL_PATH\bin\start.bat"
        description="Lancer Pastèque"
        iconFile="$INSTALL_PATH\pasteque_launcher.ico"
        iconIndex="0"
        initialState="noShow"
        programGroup="yes"
        desktop="yes"
        applications="no"
        startMenu="yes"
        startup="no">>
    <createForPack name="Core"/>
    </shortcut>
    <!--
    Raccourci du désinstallateur de l'application
    -->
    <shortcut
        name="Pastèque-Désinstallateur"
        target="$INSTALL_PATH\bin\Pasteque-uninstaller.jar"
        description="Désinstaller Pastèque"
        iconFile="$INSTALL_PATH\pasteque_launcher.ico"
        programGroup="yes"
        desktop="no"
        applications="no"
        startMenu="no"
        startup="no">
    <createForPack name="Core"/>
    </shortcut>

</shortcuts>
